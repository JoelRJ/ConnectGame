    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/board"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="test1"
            android:visibility="visible">

            <ImageView
                android:id="@+id/zeroZero"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="12dp"
                android:onClick="drop"
                android:tag="0,0" />

            <ImageView
                android:id="@+id/zeroOne"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="12dp"
                android:onClick="drop"
                android:tag="0,1" />

            <ImageView
                android:id="@+id/zeroTwo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="12dp"
                android:onClick="drop"
                android:tag="0,2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:tag="test2">

            <ImageView
                android:id="@+id/oneZero"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="12dp"
                android:onClick="drop"
                android:tag="1,0" />

            <ImageView
                android:id="@+id/oneOne"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="12dp"
                android:onClick="drop"
                android:tag="1,1" />

            <ImageView
                android:id="@+id/oneTwo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="12dp"
                android:onClick="drop"
                android:tag="1,2" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="test3">

            <ImageView
                android:id="@+id/twoZero"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="12dp"
                android:onClick="drop"
                android:tag="2,0" />

            <ImageView
                android:id="@+id/twoOne"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="12dp"
                android:onClick="drop"
                android:tag="2,1" />

            <ImageView
                android:id="@+id/twoTwo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="13dp"
                android:layout_marginVertical="12dp"
                android:onClick="drop"
                android:tag="2,2" />
        </TableRow>


    </TableLayout>

    <TextView
        android:id="@+id/winnerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="79dp"
        android:onClick="ResetBoard"
        android:text="Reset Board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>